<Window x:Class="lignumsoftAdamKurek.SaveToDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save to database" Height="150" Width="300">
    <Grid>
        <Label Content="Enter String:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="stringTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,5,0,0" Width="150"/>

        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="80" Height="30" Click="SubmitButton_Click"/>
    </Grid>
</Window>
