<Window x:Class="lignumsoftAdamKurek.CreateTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lignumsoftAdamKurek"
        mc:Ignorable="d"
        Title="Create table" Height="200" Width="300">
    <Grid>
      

        <Label Content="Table Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="stringTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,45,0,0" Width="150"/>
        
          <Label Content="Column Number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
          <TextBox x:Name="numberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,5,0,0" Width="150"/>

        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="80" Height="30" Click="SubmitButton_Click"/>
    </Grid>
</Window>